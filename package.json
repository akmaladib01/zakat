{
  "name": "zakat-app",
  "version": "1.0.13",
  "description": "An offline zakat management application.",
  "author": "akmal adib",
  "build": {
    "appId": "com.zakat-app.kutipan",
    "productName": "Zakat App",
    "win":{
      "target": "nsis"
    },
    "directories": {
      "output" : "dist"
    },
    "publish": [
    {
      "provider": "github",
      "owner": "akmaladib01",
      "repo": "zakat",
      "releaseType": "release"
    }
  ]
  },
  
  "main": "main.js",
  "extraResources": [
    {
      "from": "data_zakat.db",
      "to": "data_zakat.db"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/akmaladib01/zakat.git"
  },
  "scripts": {
  "ng": "ng",
  "start": "electron .",
  "build": "ng build",
  "watch": "ng build --watch --configuration development",
  "test": "ng test",
  "electron": "ng build && electron .",
  "package": "electron-builder --dir",
  "clean": "rimraf dist",
  "make": "npm run clean && electron-builder",
  "publish": "electron-builder --publish always"
},
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "better-sqlite3": "^11.6.0",
    "electron-log": "^5.2.4",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "ngx-electron": "^2.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "update-electron-app": "^3.1.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.5",
    "@angular/cli": "^17.0.5",
    "@angular/compiler-cli": "^17.0.0",
    "@electron-forge/publisher-github": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.2.2",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  }
}
